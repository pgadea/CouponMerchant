@page
@model CouponMerchant.Pages.Deals.IndexModel
@using CouponMerchant.Utility
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<h2 class="text-info" py-2">Deals</h2>

<div class="container backgroundWhite">
    <div class="card">
        <div class="card-header bg-dark text-light ml-0 row container">
            <div class="col-6">
                <i class="fas fa-comment-dollar"></i>
            </div>
            <div class="col-6 text-right">
                @if(User.IsInRole(SD.AdminEndUser))
                {
                    <a asp-page="/Users/Index" class="btn btn-outline-info btn-sm">Back to Users</a>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="row" style="padding-bottom:40px; padding-top:20px;">
                <div class="col-md-3">
                    <p>
                        <a asp-page="Create" asp-route-userId="@Model.CarAndCustVM.UserObj.Id" class="btn btn-info form-control">
                            <i class="fas fa-plus"></i> &nbsp; Add New Deal
                        </a>
                    </p>
                </div>
                <div class="col-md-6 offset-md-3">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="CarAndCustVM.UserObj.Name"></label>
                        </div>
                        <div class="col-sm-8" style="padding-bottom:5px;">
                            <input asp-for="CarAndCustVM.UserObj.Name" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="CarAndCustVM.UserObj.PhoneNumber"></label>
                        </div>
                        <div class="col-sm-8" style="padding-bottom:5px;">
                            <input asp-for="CarAndCustVM.UserObj.PhoneNumber" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="CarAndCustVM.UserObj.Email"></label>
                        </div>
                        <div class="col-sm-8" style="padding-bottom:5px;">
                            <input asp-for="CarAndCustVM.UserObj.Email" disabled class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            @if (!Model.CarAndCustVM.Deals.Any())
            {
                <p>
                    No Deal Found! Please add a deal...
                </p>
            }
            else
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.CarAndCustVM.Deals.FirstOrDefault().DealName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CarAndCustVM.Deals.FirstOrDefault().StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CarAndCustVM.Deals.FirstOrDefault().EndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CarAndCustVM.Deals.FirstOrDefault().DollarValue)
                        </th>
                        <th></th>
                        @if (User.IsInRole(SD.AdminEndUser))
                        {
                            <th></th>
                        }
                        <th></th>
                    </tr>
                    @foreach (var item in Model.CarAndCustVM.Deals)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.DealName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.DollarValue)
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-page="../Services/History" asp-route-carId="@item.Id">
                            <i class="fas fa-history"></i> &nbsp; Deal History
                        </a>
                    </td>
                    @if (User.IsInRole(SD.AdminEndUser))
                    {
                    <td>
                        <a class="btn btn-success" asp-page="../Services/Create" asp-route-carId="@item.Id">
                            <i class="fas fa-plus"></i> &nbsp; New Service
                        </a>
                    </td>
                    }
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a> &nbsp;&nbsp;
                            <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>

    

