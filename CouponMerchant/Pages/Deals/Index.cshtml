@page
@model CouponMerchant.Pages.Deals.IndexModel
@using CouponMerchant.Utility
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<form method="get" asp-page="Index">
    <br /><br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Deals</h2>
        </div>
        <div class="col-3 offset-3 text-right">
            <a asp-page="Create" class="btn btn-info form-control">
                <i class="fas fa-plus"></i> &nbsp; Add New Deal
            </a>
        </div>
    </div>

    <div class="border backgroundWhite">
        <div style="height:60px;" class="container border border-secondary">
            <div class="row">
                <div class="col-11">
                    <div class="row" style="padding-top:10px">
                        <div class="col-4">
                            @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", placeholder = "Name..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchCity", new { htmlAttributes = new { @class = "form-control", placeholder = "Start Date..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchState", new { htmlAttributes = new { @class = "form-control", placeholder = "End Date..." } })
                        </div>
                    </div>
                </div>
                <div class="col-1">
                    <div class="row" style="padding-top:10px; padding-right:15px;">
                        <button type="submit" name="submit" value="Search" class="btn btn-info form-control">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.DealsVM.Deals.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DealsVM.Deals.First().StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DealsVM.Deals.First().EndDate)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.DealsVM.Deals)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.EndDate)
                        </td>
                        <td>
                            <a asp-page="../Merchants/Index" asp-route-merchantId="@item.MerchantId" style="text-decoration:none;">
                                <i class="fas fa-file-invoice-dollar"></i> &nbsp; View Deals
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="5" class="text-right">
                        <div page-model="@Model.DealsVM.PagingInfo" asp-action="Index" page-class="btn border"
                             page-class-normal="btn btn-light" page-class-selected="btn btn-info active" class="btn-group">
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

    

