@page
@model CouponMerchant.Pages.Merchants.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Add New Merchant</h2>
<br />
<form method="post">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Merchant.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Merchant.Name" class="form-control" />
            </div>
            <span asp-validation-for="Merchant.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Merchant.Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Merchant.Email" type="email" class="form-control" />
            </div>
            <span asp-validation-for="Merchant.Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Merchant.PhoneNumber"></label>
            </div>
            <div class="col-5">
                <input asp-for="Merchant.PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="Merchant.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Merchant.Address"></label>
            </div>
            <div class="col-5">
                <input asp-for="Merchant.Address" class="form-control" />
            </div>
            <span asp-validation-for="Merchant.Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Merchant.City"></label>
            </div>
            <div class="col-5">
                <input asp-for="Merchant.City" class="form-control" />
            </div>
            <span asp-validation-for="Merchant.City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Merchant.State"></label>
            </div>
            <div class="col-5">
                <input asp-for="Merchant.State" class="form-control" />
            </div>
            <span asp-validation-for="Merchant.State" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Merchant.PostalCode"></label>
            </div>
            <div class="col-5">
                <input asp-for="Merchant.PostalCode" class="form-control" />
            </div>
            <span asp-validation-for="Merchant.PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

